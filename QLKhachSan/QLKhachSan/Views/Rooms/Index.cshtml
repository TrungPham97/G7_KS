@model IEnumerable<QLKhachSan.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>ROOMS</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Room</th>
        <th>Room Type</th>
        <th>Amount</th>
        <th>Note</th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.RoomType.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.RoomType.Amount)</td>
        <td>@Html.DisplayFor(modelItem => item.RoomType.Note)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @if(item.IsExist == false)
            {
               @Html.ActionLink("Book", "Create", "RoomReservations", new { id = item.Id }, new { @class = "btn-custom btn btn-success" })
            }
            else
            {
                <p class="btn-custom btn btn-danger">None</p>
            }
        </td>
    </tr>
}

</table>
