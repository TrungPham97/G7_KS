@model IEnumerable<QLKhachSan.Models.RoomReservation>

@{
    ViewBag.Title = "Index";
}

<h2>RESERVATIONS</h2>

<p style="padding-bottom: 20px">
    @*@Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-primary" })*@
</p>
<table class="table">
    <tr>
        <th>
            Room Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnded)
        </th>
        <th>
            Options
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEnded)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
