@model IEnumerable<QLKhachSan.Models.RoomReservation>

@{
    ViewBag.Title = "Bill";
}

<h2>Bill</h2>

<table class="table">
    <tr>
        <th>
            Room Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnded)
        </th>
        <th>
            Options
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnded)
            </td>
            <td>
                @if(item.BillId == null)
                {
                    @Html.ActionLink("Add To Bill", "AddToBill", "RoomReservations", new { id = ViewBag.BillId, reservation = item.Id }, new { @class = "btn-custom btn btn-primary" })
                }          
            </td>
        </tr>
    }

</table>
